{
  "name": "aurbit-monorepo",
  "version": "1.0.0",
  "private": true,
  "licence": "MIT",
  "scripts": {
    "client:dev": "yarn workspace client start",
    "client:build": "yarn workspace client build --max-old-space-size=12288",
    "client:eject": "yarn workspace client eject",
    "client:test": "yarn workspace client test",
    "eth:chain": "cd packages/buidler && npx buidler node",
    "eth:console": "cd packages/buidler && npx buidler console",
    "eth:buidler": "cd packages/buidler && npx buidler",
    "eth:test": "cd packages/buidler && npx buidler test",
    "eth:compile": "cd packages/buidler && npx buidler compile",
    "eth:deploy": "cd packages/buidler && npx buidler run scripts/deploy.js && npx buidler run scripts/publish.js",
    "eth:watch": "cd packages/buidler && node scripts/watch.js"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "1.3.3-rc.0",
    "@nomiclabs/buidler-truffle5": "1.3.3-rc.0",
    "@nomiclabs/buidler-web3": "1.3.3-rc.0"
  },
  "workspaces": {
    "packages": ["packages/*"]
  }
}
